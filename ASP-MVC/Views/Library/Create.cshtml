@model ASP_MVC.Models.Library.GameCopyCreate

@{
	ViewData["Title"] = "Create";
}

<h1>Add '@Model.Game_Title' to your library?</h1>
<div>
	<a asp-action="Index" asp-controller="Boardgame">Back to List</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
			@Html.HiddenFor(Model=>Model.Game_Id)
			@Html.HiddenFor(Model=>Model.User_Id)
			@Html.HiddenFor(Model=>Model.Game_Title)
			@Html.HiddenFor(Model=>Model.States)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group"> *@
            @*     <label asp-for="Game_Title" class="control-label"></label> *@
            @* </div> *@
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <select asp-for="State"
						asp-items="Model.States"
					class="form-control" ></select>

                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
