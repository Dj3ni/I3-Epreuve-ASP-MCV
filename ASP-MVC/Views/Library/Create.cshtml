@model ASP_MVC.Models.Library.GameCopyCreate

@{
    ViewData["Title"] = "Create";
}

<h1> Add GameName in my library</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
			@*Change with Game Name*@
            <div class="form-group">
                <label asp-for="Game_Id" class="control-label"></label>
                <input asp-for="Game_Id" class="form-control" />
                <span asp-validation-for="Game_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <select asp-for="State" 
						asp-items ="Model.States"
						class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
           @Html.HiddenFor(Model=>Model.User_Id)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
